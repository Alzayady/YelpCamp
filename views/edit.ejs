<% include partial/header %>
<div class="container">
	<div class="row">
		
	
	   <h1 class="text-center"> Edit a <%=camp.name %> </h1>
		<div style="width:30%; margin:25px auto ;">
			
		   <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
               <div class="form-group">
				 	<input class="form-control" type="text" name="name" placeholder="name" value=" <%= camp.name %>">
			   </div>
			   <div class="form-group">
				  <input class="form-control" type="text" name="url" placeholder="url" value=" <%= camp.image %>">
			   </div>
			   <div class="form-group">
				  <input class="form-control" type="text" name="description" placeholder="description" value=" <%= camp.description %>">
			   </div>
			   	<div class="form-group">
				  <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
			   </div>

			   <div class="form-group">
				  <button class="btn btn-default btn-primary btn-block"> submit </button>
			   </div>

		   </form>
				<a href="/campgrounds">Go Back  </a>

		</div>
			</div>

</div>
<% include partial/footer %>
<% include partial/header %>
<div class="container">
    <header class="jumbotron">
		<div class="container">
			
		   <h1> This is a camp Ground page: </h1>
			<p>
				view all hand-picked campGround from all over the world 
			</p>
			<p>
				<a class="btn btn-primary btn-lg "href="/campgrounds/new"> add new campGround</a>
			</p>
		</div>

	</header>
   <div class="row text-center" style="display:flex; flex-wrap:wrap;">
	
	<% campGround.forEach(function (camp){ %>
		<div class="col-md-4 col-sm-6 ">
			<div class="thumbnail card">
					<img src= " <%= camp["image"] %> "  width="350" height="250" class="card-img-top" >
					<div class="caption">
						 <h4> <strong> <%= camp["name"] %>  </strong> </h4>
					</div>
				<p>
					<a href="/campgrounds/<%= camp._id %>" class="btn btn-success">More Info</a>
				</p>
			</div>
		</div>
	<% }) %>
	</div>

</div>

<% include partial/footer %> 